<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="lunatic_TextAppearance" />

  <style name="lunatic_TextAppearance.Day">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="lunatic_TextAppearance.DayOfWeek">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="lunatic_TextAppearance.Month">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="lunatic_DatePickerView">
    <item name="lunatic_monthView">@layout/lunatic_month_view</item>
  </style>

  <style name="lunatic_MonthView">
    <item name="lunatic_dayHeight">40dp</item>
    <item name="lunatic_dayWidth">44dp</item>
    <item name="lunatic_weekDayHeight">36dp</item>
    <item name="lunatic_monthHeight">56dp</item>
    <item name="lunatic_dateTextAppearance">@style/lunatic_TextAppearance.Day</item>
    <item name="lunatic_weekDayTextAppearance">@style/lunatic_TextAppearance.DayOfWeek</item>
    <item name="lunatic_monthTextAppearance">@style/lunatic_TextAppearance.Month</item>
    <item name="lunatic_daySelectorColor">?android:colorFocusedHighlight</item>
    <item name="lunatic_dayHighlightColor">?android:colorActivatedHighlight</item>
  </style>
</resources>
