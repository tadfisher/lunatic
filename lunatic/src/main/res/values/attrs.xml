<?xml version="1.0" encoding="utf-8"?>
<resources>

  <attr format="reference" name="lunatic_datePickerStyle"/>
  <attr format="reference" name="lunatic_monthViewStyle"/>

  <declare-styleable name="lunatic_DatePickerView">
    <attr format="reference" name="lunatic_monthView"/>
  </declare-styleable>

  <declare-styleable name="lunatic_MonthView">
    <attr name="lunatic_dayWidth" format="dimension" />
    <attr name="lunatic_dayHeight" format="dimension" />
    <attr name="lunatic_weekDayHeight" format="dimension" />
    <attr name="lunatic_monthHeight" format="dimension" />
    <attr name="lunatic_dateTextAppearance" format="reference" />
    <attr name="lunatic_weekDayTextAppearance" format="reference" />
    <attr name="lunatic_monthTextAppearance" format="reference" />
    <attr name="lunatic_minDate" format="string" />
    <attr name="lunatic_maxDate" format="string" />

    <attr name="lunatic_drawGrid" format="boolean" />
    <attr name="lunatic_gridColor" format="color" />
    <attr name="lunatic_gridStroke" format="dimension" />
  </declare-styleable>
</resources>
